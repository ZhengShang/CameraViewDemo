<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/focusContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/focusMarkerContainer"
            android:layout_width="70dp"
            android:layout_height="70dp">

            <ImageView
                android:id="@+id/inner_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_focus_inner"/>

            <ImageView
                android:id="@+id/outer_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_fouce_outer"/>

        </FrameLayout>

        <com.zhiyun.android.cameraview.AEsun
            android:id="@+id/aeSun"
            android:layout_width="wrap_content"
            android:layout_height="120dp"/>
    </LinearLayout>

</merge>
